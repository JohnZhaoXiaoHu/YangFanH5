{{#each Contents.Content}}
    <li>
        {{#contentType ../type}}
            <a href="./program-list.html?id={{ContentID}}"><img src="{{Thumb}}" width="100%" height="90"></a>
        {{else}}
            <a href="special.html?id={{ContentID}}&type={{ContentType}}"><img src="{{Thumb}}" width="100%" height="90"></a>
            <h3 class="overflow">{{Name}}</h3>
        {{/contentType}}
    </li>
{{/each}}