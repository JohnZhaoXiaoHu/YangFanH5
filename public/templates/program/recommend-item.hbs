{{#each Content.RelateContents.Content}}
    <li>
        {{#contentType ContentType}}
            <a href="program.html?id={{ContentID}}"><img src="{{Poster}}" height="80" width="100%"></a>
        {{else}}
            <a href="special.html?id={{ContentID}}"><img src="{{Poster}}" height="80" width="100%"></a>
        {{/contentType}}
        <h3>{{Name}}</h3>
        <h4>{{Summary}}</h4>
    </li>
{{/each}}