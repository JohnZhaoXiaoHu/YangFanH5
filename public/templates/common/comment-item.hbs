<li class="clearfix">
    <div class="user">
        <img class="img-circle" width="40px" height="40px" src="../images/avatar-placeholder.png">
    </div>
    <div class="user-info clearfix">
        <h3>
            <p class="user-name">{{UserID}}</p>
            <p class="coment-data">{{CreateTime}}</p>
        </h3>
        <div class="commend-wrap">
            {{#praiseMark PraiseMark}}
                <i class="current" data-content-id="{{ContentID}}" data-comment-id="{{CommentID}}"> </i>
            {{else}}
                <i data-content-id="{{ContentID}}" data-comment-id="{{CommentID}}"> </i>
            {{/praiseMark}}
            <span>{{Praise}}</span>
        </div>
        <div class="comment-content">{{Detail}}</div>
    </div>
</li>
